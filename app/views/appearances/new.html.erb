<% if flash[:errors] %>
    <h3> Errors: </h3>
    <% flash[:errors].each do |err| %>
        <li> <%= err %> </li>
    <% end %>
<% end %>

<br>

<%= form_with model: @appearance do |f| %>

    Episode: <%= f.collection_select :episode_id, Episode.all, :id, :number %> <br>
    Guest: <%= f.collection_select :guest_id, Guest.all, :id, :name %> <br>
    Rating: <%= f.number_field :rating, :placeholder => "0" %> <br><br>
    <%= f.submit %>

<% end %>